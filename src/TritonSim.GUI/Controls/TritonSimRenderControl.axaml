<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:ctrl="using:TritonSim.GUI.Controls"
             x:Class="TritonSim.GUI.Controls.TritonSimRenderControl"
			 x:Name="Root">
	<Grid>
		<ctrl:SimulationNativeControlHost 
			x:Name="NativeContainer"
			HorizontalAlignment="Stretch" 
			VerticalAlignment="Stretch" 
			WindowProvider="{Binding WindowProvider, ElementName=Root}"
			NativeHandleCreated="NativeContainer_NativeHandleCreated"/>

		<StackPanel 
			x:Name="OverlayBorder"
			HorizontalAlignment="Center" 
			VerticalAlignment="Center" 
			Spacing="10">
			<TextBlock 
				Text="STATUS" 
				FontWeight="Bold" 
				Foreground="Red" 
				HorizontalAlignment="Center"/>
			
			<TextBlock 
				x:Name="OverlayTextBox"
				Text="Initializing..."
				TextAlignment="Center"
				Background="Transparent"
				Foreground="White"/>
		</StackPanel>
	</Grid>
</UserControl>