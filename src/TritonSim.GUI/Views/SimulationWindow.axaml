<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TritonSim.GUI.Views.SimulationWindow"
		xmlns:vm="using:TritonSim.GUI.ViewModels"
		xmlns:ctrl="using:TritonSim.GUI.Controls"
		xmlns:views="using:TritonSim.GUI.Views"
		x:DataType="vm:VmSimulationWindow"
		
		SystemDecorations="Full"
		ExtendClientAreaToDecorationsHint="True"
		ExtendClientAreaChromeHints="PreferSystemChrome"

		ExtendClientAreaTitleBarHeightHint="40"
		
		Background="{StaticResource StdBackground}"
		
        Title="TritonNET - Simulations">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="40"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Grid 
			Grid.Row="0" 
			Background="Transparent"
			PointerPressed="TitleBar_PointerPressed">
			<TextBlock
				Text="{Binding Path=Title}"
				VerticalAlignment="Center"
				Padding="10,0,0,0"
				FontSize="16"
				Foreground="{StaticResource TitleForeground}"/>
		</Grid>

		<views:SimulationView
			Grid.Row="1" 
			Margin="0,0,0,0"
			DataContext="{Binding Path=Simulation}"/>
	</Grid>

</Window>
